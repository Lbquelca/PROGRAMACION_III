<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Lista de Usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h1>Usuarios</h1>
    <a href="/create" class="btn btn-primary mb-3">Crear Usuario</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th><th>Email</th><th>Edad</th><th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.age %></td>
                    <td>
                        <a href="/edit/<%= user.id %>" class="btn btn-warning">Editar</a>
                        <a href="/delete/<%= user.id %>" class="btn btn-danger">Borrar</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
